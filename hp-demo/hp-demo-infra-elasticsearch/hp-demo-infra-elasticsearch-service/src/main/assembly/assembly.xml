<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>${git.commit.id.abbrev}-${git.commit.time}</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>${project.artifactId}-${project.version}-${git.commit.id.abbrev}-${git.commit.time}</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>/opt/deploy/scripts</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>target/classes/bootstrap.yml</source>
            <outputDirectory>deploy</outputDirectory>
            <fileMode>0644</fileMode>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <source>target/classes/git.properties</source>
            <outputDirectory>deploy</outputDirectory>
            <fileMode>0644</fileMode>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <source>target/${project.artifactId}-${project.version}.jar</source>
            <outputDirectory>deploy</outputDirectory>
            <fileMode>0644</fileMode>
        </file>
    </files>
</assembly>
