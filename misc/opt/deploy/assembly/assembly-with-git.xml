<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 https://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>${git.commit.id.abbrev}-${git.commit.time}</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>${project.artifactId}-${project.version}-${git.commit.id.abbrev}-${git.commit.time}</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>/opt/deploy/scripts</directory>
            <outputDirectory>/</outputDirectory>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
            <filtered>true</filtered>
            <includes>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>/opt/deploy/scripts</directory>
            <outputDirectory>/</outputDirectory>
            <fileMode>0755</fileMode>
            <filtered>false</filtered>
            <includes>
                <include>yq</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/classes</directory>
            <outputDirectory>/</outputDirectory>
            <fileMode>0644</fileMode>
            <lineEnding>unix</lineEnding>
            <includes>
                <include>bootstrap.yml</include>
                <include>bootstrap.yaml</include>
                <include>git.properties</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>target/${project.artifactId}-${project.version}.jar</source>
            <outputDirectory>/</outputDirectory>
            <fileMode>0644</fileMode>
        </file>
    </files>
</assembly>
